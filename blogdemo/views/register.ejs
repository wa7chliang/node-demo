<script>
  $('#submit').click(function () {
    $.post('/users/register', {
      username: $('#username').val(),
      password: $('#password').val(),
      repassword: $('#repassword').val()
      },function (data) {
        if(data.state == 0) {
          $('#msg').html(data.msg)
        } else if(data.state == 1) {
          window.location.href="/"
        }
      })
  })
</script>



